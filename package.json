{
  "name": "core-2-unified-dashboard",
  "version": "1.0.0",
  "description": "Core-2 Unified Dashboard - React + Node.js Business Management Platform",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "setup": "npm run install:all && npm run setup:backend",
    "setup:backend": "cd backend && npm run setup",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "clean": "npm run clean:backend && npm run clean:frontend",
    "clean:backend": "cd backend && npm run clean",
    "clean:frontend": "cd frontend && npm run clean"
  },
  "keywords": [
    "dashboard",
    "react",
    "nextjs",
    "nodejs",
    "mongodb",
    "business",
    "management",
    "analytics",
    "ecommerce",
    "crm"
  ],
  "author": "Core-2 Dashboard Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "openapi-typescript": "^7.8.0"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/core-2-unified-dashboard.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/core-2-unified-dashboard/issues"
  },
  "homepage": "https://github.com/your-org/core-2-unified-dashboard#readme",
  "dependencies": {
    "express-async-handler": "^1.2.0"
  }
}
