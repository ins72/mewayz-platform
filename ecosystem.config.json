{
  "apps": [
    {
      "name": "mewayz-frontend",
      "script": "npm",
      "args": "start",
      "cwd": "./frontend",
      "instances": "max",
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": "3000"
      }
    },
    {
      "name": "mewayz-backend",
      "script": "server.js",
      "cwd": "./backend",
      "instances": 2,
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": "8000"
      }
    }
  ]
}
